@page "{id:int}"
@model Bank.Pages.Banking.TransactionsModel
@{
    ViewData["Title"] = "Transaction History";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Transaction History</h2>
            <p class="text-muted mb-0">@Model.Account?.AccountName - @Model.Account?.AccountNumber</p>
        </div>
        <div>
            <a asp-page="Statements" asp-route-id="@Model.Account?.Id" class="btn btn-outline-primary">
                Download Statement
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <input type="hidden" name="id" value="@Model.Account?.Id" />

                <div class="col-md-3">
                    <label class="form-label">From Date</label>
                    <input type="date" name="fromDate" class="form-control" value="@Model.FromDate?.ToString("yyyy-MM-dd")" />
                </div>

                <div class="col-md-3">
                    <label class="form-label">To Date</label>
                    <input type="date" name="toDate" class="form-control" value="@Model.ToDate?.ToString("yyyy-MM-dd")" />
                </div>

                <div class="col-md-3">
                    <label class="form-label">Category</label>
                    <select name="category" class="form-select">
                        <option value="">All Categories</option>
                        @foreach (var cat in Model.Categories)
                        {
                            <option value="@cat" selected="@(Model.Category == cat)">@cat</option>
                        }
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label">Search</label>
                    <div class="input-group">
                        <input type="text" name="search" class="form-control" placeholder="Search..." value="@Model.SearchTerm" />
                        <button type="submit" class="btn btn-primary">Filter</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Transactions List -->
    <div class="card">
        <div class="card-body">
            @if (Model.Transactions != null && Model.Transactions.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Reference</th>
                                <th>Type</th>
                                <th>Description</th>
                                <th>Category</th>
                                <th class="text-end">Amount</th>
                                <th class="text-end">Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var txn in Model.Transactions)
                            {
                                <tr>
                                    <td>
                                        @txn.CreatedAt.ToString("MMM dd, yyyy")<br />
                                        <small class="text-muted">@txn.CreatedAt.ToString("HH:mm")</small>
                                    </td>
                                    <td><code>@txn.ReferenceNumber</code></td>
                                    <td>
                                        <span class="badge @GetTypeBadgeClass(txn.Type)">@txn.Type</span>
                                    </td>
                                    <td>@txn.Description</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(txn.Category))
                                        {
                                            <span class="badge bg-secondary">@txn.Category</span>
                                        }
                                    </td>
                                    <td class="text-end @(txn.Amount >= 0 ? "text-success" : "text-danger")">
                                        <strong>@txn.Amount.ToString("C")</strong>
                                    </td>
                                    <td class="text-end">@txn.BalanceAfter.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                    <p class="text-muted mt-3">No transactions found</p>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    string GetTypeBadgeClass(TransactionType type)
    {
        return type switch
        {
            TransactionType.Deposit => "bg-success",
            TransactionType.Withdrawal => "bg-danger",
            TransactionType.Transfer => "bg-primary",
            TransactionType.BillPayment => "bg-warning text-dark",
            TransactionType.LoanPayment => "bg-info",
            _ => "bg-secondary"
        };
    }
}
