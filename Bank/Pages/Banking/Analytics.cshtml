@page
@model Bank.Pages.Banking.AnalyticsModel
@{
    ViewData["Title"] = "Spending Analytics";
}

<div class="container-fluid">
    <h2 class="mb-4">Spending Analytics</h2>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6 class="card-title">Income</h6>
                    <h3>@Model.CurrentReport?.TotalIncome.ToString("C")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h6 class="card-title">Expenses</h6>
                    <h3>@Model.CurrentReport?.TotalExpenses.ToString("C")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6 class="card-title">Net Savings</h6>
                    <h3>@Model.CurrentReport?.NetSavings.ToString("C")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6 class="card-title">Avg. Monthly Spending</h6>
                    <h3>@Model.AverageMonthlySpending.ToString("C")</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Category Breakdown -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Spending by Category - @DateTime.UtcNow.ToString("MMMM yyyy")</h5>
                </div>
                <div class="card-body">
                    @if (Model.CategoryBreakdown != null && Model.CategoryBreakdown.Any())
                    {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Category</th>
                                    <th class="text-end">Amount</th>
                                    <th style="width: 40%;">% of Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var total = Model.CategoryBreakdown.Values.Sum();
                                }
                                @foreach (var item in Model.CategoryBreakdown.OrderByDescending(x => x.Value))
                                {
                                    var percent = total > 0 ? (item.Value / total) * 100 : 0;
                                    <tr>
                                        <td>@item.Key</td>
                                        <td class="text-end">@item.Value.ToString("C")</td>
                                        <td>
                                            <div class="progress">
                                                <div class="progress-bar" role="progressbar" style="width: @percent%;" aria-valuenow="@percent" aria-valuemin="0" aria-valuemax="100">
                                                    @percent.ToString("F1")%
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted text-center">No spending data available for this month</p>
                    }
                </div>
            </div>
        </div>

        <!-- Budgets -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Budgets</h5>
                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#createBudgetModal">+ New Budget</button>
                </div>
                <div class="card-body">
                    @if (Model.Budgets != null && Model.Budgets.Any())
                    {
                        @foreach (var budget in Model.Budgets)
                        {
                            var percent = budget.MonthlyLimit > 0 ? (budget.CurrentSpent / budget.MonthlyLimit) * 100 : 0;
                            var colorClass = percent >= 100 ? "bg-danger" : percent >= budget.AlertThresholdPercent ? "bg-warning" : "bg-success";
                            <div class="mb-3">
                                <div class="d-flex justify-content-between">
                                    <strong>@budget.Name (@budget.Category)</strong>
                                    <span>@budget.CurrentSpent.ToString("C") / @budget.MonthlyLimit.ToString("C")</span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar @colorClass" role="progressbar" style="width: @Math.Min(percent, 100)%;">
                                        @percent.ToString("F0")%
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted text-center">No budgets set. Create one to track your spending!</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Historical Reports -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Monthly History</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Month</th>
                                    <th class="text-end">Income</th>
                                    <th class="text-end">Expenses</th>
                                    <th class="text-end">Savings</th>
                                    <th class="text-end">Savings Rate</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var report in Model.HistoricalReports)
                                {
                                    var savingsRate = report.TotalIncome > 0 ? (report.NetSavings / report.TotalIncome) * 100 : 0;
                                    <tr>
                                        <td>@(new DateTime(report.Year, report.Month, 1).ToString("MMMM yyyy"))</td>
                                        <td class="text-end text-success">@report.TotalIncome.ToString("C")</td>
                                        <td class="text-end text-danger">@report.TotalExpenses.ToString("C")</td>
                                        <td class="text-end @(report.NetSavings >= 0 ? "text-primary" : "text-danger")">@report.NetSavings.ToString("C")</td>
                                        <td class="text-end">@savingsRate.ToString("F1")%</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Budget Modal -->
<div class="modal fade" id="createBudgetModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="CreateBudget">
                <div class="modal-header">
                    <h5 class="modal-title">Create Budget</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Budget Name</label>
                        <input name="name" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Category</label>
                        <select name="category" class="form-select" required>
                            @foreach (var cat in Model.SpendingCategories)
                            {
                                <option value="@cat.Name">@cat.Name</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Monthly Limit</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input name="limit" type="number" step="10" min="10" class="form-control" required />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Budget</button>
                </div>
            </form>
        </div>
    </div>
</div>
